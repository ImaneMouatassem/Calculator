<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_weight="1"
        android:ems="10"
        android:gravity="right"
        android:inputType="textPersonName"
        android:text="0"
        android:textSize="40pt" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:layout_weight="1"
        android:clipChildren="false"
        android:clipToPadding="true"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_marginBottom="1pt">

            <Button
                android:id="@+id/AC"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/teal_700"
                android:text="AC"
                android:onClick="acEvent"
                android:layout_marginRight="1pt">
                ></Button>

            <Button
                android:id="@+id/plusMoins"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/teal_200"
                android:text="+/-"
                android:layout_marginRight="1pt"
                >

            </Button>

            <Button
                android:id="@+id/multiply"
                android:onClick="operationEvent"

                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/teal_200"
                android:text="*"
                android:layout_marginRight="1pt">

            ></Button>

            <Button
                android:id="@+id/devide"
                android:onClick="operationEvent"

                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/teal_200"
                android:text="/"

                ></Button>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1pt">
            <Button
                android:id="@+id/sept"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:text="7"
                android:onClick="nuberEvent"
                android:layout_marginRight="1pt">

            ></Button>

            <Button
                android:id="@+id/huit"
                android:onClick="nuberEvent"

                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:text="8"
                android:layout_marginRight="1pt">


            ></Button>

            <Button
                android:id="@+id/neuf"
                android:onClick="nuberEvent"

                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:text="9"
                android:layout_marginRight="1pt">

                ></Button>

            <Button
                android:id="@+id/modulo"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/teal_200"
                android:text="%"
                android:onClick="operationEvent"

                ></Button>
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/quatre"
                android:onClick="nuberEvent"

                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:text="4"
                android:layout_marginRight="1pt">

                ></Button>

            <Button
                android:id="@+id/cinq"
                android:onClick="nuberEvent"

                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:text="5"
                android:layout_marginRight="1pt">

                ></Button>

            <Button
                android:id="@+id/six"
                android:onClick="nuberEvent"

                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:text="6"
                android:layout_marginRight="1pt">

                ></Button>

            <Button
                android:id="@+id/plus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/teal_200"
                android:text="+"
                android:onClick="operationEvent"

                ></Button>
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/un"
                android:onClick="nuberEvent"

                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:text="1"
                android:layout_marginRight="1pt">

                ></Button>

            <Button
                android:id="@+id/deux"
                android:onClick="nuberEvent"

                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:text="2"
                android:layout_marginRight="1pt">

                ></Button>

            <Button
                android:id="@+id/trois"
                android:onClick="nuberEvent"

                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:text="3"
                android:layout_marginRight="1pt">

                </Button>

            <Button
                android:id="@+id/moins"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/teal_200"
                android:text="-"
                android:onClick="operationEvent"

                ></Button>
        </TableRow>

        <LinearLayout
            android:layout_marginBottom="1pt">
            <Button
                android:id="@+id/zero"
                android:layout_width="46pt"
                android:layout_height="30pt"
                android:layout_weight="2"
                android:background="@color/white"
                android:text="0"
                android:layout_marginRight="1pt"
                android:onClick="nuberEvent"


                ></Button>
            <Button
                android:id="@+id/dot"
                android:layout_width="46pt"
                android:layout_height="30pt"
                android:layout_weight="2"
                android:onClick="nuberEvent"
                android:background="@color/teal_700"
                android:text="."
                android:layout_marginRight="1pt"

                ></Button>
            <Button
                android:id="@+id/equal"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/teal_700"
                android:text="="
                android:onClick="equalActivity"


                ></Button>
        </LinearLayout>
    </TableLayout>


</LinearLayout>